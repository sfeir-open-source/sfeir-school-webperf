 <h2 class="title-bg">AVIS CLIENTS</h2>
<div class="reviews">
  {% for review in userReviews %}
  <div class="review">
    <div class="review__header">
      <img
        class="review__avatar"
        loading="lazy"
        src="{{ review.author.avatar }}?width=50"
        alt="{{ review.author.name }}"
        width="100"
        height="100"
      />
      <div class="review__author">
        <span class="review__author-name">{{ review.author.name }}</span>
        <span class="review__date">{{ review.date }}</span>
        <span class="review__rating-stars">
          {% for i in range(0, review.rating) %}
          <span class="review__rating-star">â˜…</span>
          {% endfor %}
        </span>
      </div>
    </div>
    {{ review.text }}
  </div>
  {%endfor %}

  <form>
    <textarea id="review-content-textarea">
    </textarea>
    <span>Mots<span id="words-count">0</span></span>

    <button type="submit">Envoyer</button>
  </form>
</div>
