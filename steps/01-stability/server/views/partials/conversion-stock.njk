<form>
  <ul class="sizes">
      {% for size in product.sizes %}
        <li class="sizes__item">
          <input type="radio" id="option-{{size.id}}" name="size" value="{{size.id}}" class="vh sizes__item-radio" {% if size.availableQuantity === 0 %} disabled {% endif %}"/>
          <label for="option-{{size.id}}" class="sizes__item-button">{{size.name}}</label>
        </li>
      {% endfor %}
  </ul>
