<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SFEIR Shop</title>
    <link rel="stylesheet" href="/styles/footer.css" />
    <link
      rel="preload"
      href="/fonts/WorkSans-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="crossorigin"
    />
    <link
      rel="preload"
      href="/fonts/WorkSans-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="crossorigin"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400..700&display=swap" >

    <script src="/scripts/main.js"></script>
  </head>
  <body>
    {% include "partials/header.njk" %}
    <main>
      <section class="container product-top">
        <div class="product-images">
          <div class="product-thumbnails">
            {% for image in product.images %}
            <button class="product-thumbnail">
              <img
                src="{{ image.source }}"
                alt="{{ image.name }}"
              />
            </button>
            {% endfor %}
          </div>
          <img
            class="product-main-image"
            src="{{ product.images[0].source }}"
            alt="{{ product.images[0].name }}"
          />
        </div>
        <div class="product-info">
          <h1 class="product-title">{{ product.name }}</h1>
          <div class="product-preview-review">
            <span class="product-preview-review-stars">
              {% for i in range(0, product.reviews.score) %}
              <span class="product-preview-review-star">★</span>
              {% endfor %}
            </span>
            <span class="product-preview-review-count">
              ({{ product.reviews.score }} avis)
            </span>
            <a href="#reviews" class="btn btn-secondary btn-small">Voir tous les avis</a>
          </div>
          <p>{{ product.descriptionShort|safe }}</p>
          <a href="description" class="btn btn-secondary btn-small">Lire plus</a>

          <div id="conversion"></div>

          <p>Livraison offerte à partir de 50€ d'achat</p>
        </div>
      </section>

      <section class="floor container descriptionblock">
        <h2 class="descriptionblock__title title-bg">DESCRIPTION</h2>
        <div class="descriptionblock__content">
          <div class="descriptionblock__content-inner">
            {{ product.description|safe }}
          </div>
        </div>
      </section>

      {% if product.video %}
        <section class="floor videosection ">
          <h2 class="videosection__title title-bg">EN VIDEO</h2>
          <div id="video"></div>
        </section>
      {% endif %}

      <section class="floor container container-small" id="reviews">
        <h2 class="title-bg">AVIS CLIENTS</h2>
        <div class="reviews">
          {% for review in product.reviews.userReviews %}
          <div class="review">
            <div class="review__header">
              <img
                class="review__avatar"
                fetchpriority="high"
                src="{{ review.author.avatar }}"
                alt="{{ review.author.name }}"
                width="500"
              />
              <div class="review__author">
                <span class="review__author-name">{{ review.author.name }}</span>
                <span class="review__date">{{ review.date }}</span>
                <span class="review__rating-stars">
                  {% for i in range(0, review.rating) %}
                  <span class="review__rating-star">★</span>
                  {% endfor %}
                </span>
              </div>
            </div>
            {{ review.text }}
          </div>
          {%endfor %}
        </div>
      </section>
    </main>
    {% include "partials/footer.njk" %}
  </body>
  <link rel="stylesheet" href="/styles/main.css" />
</html>
