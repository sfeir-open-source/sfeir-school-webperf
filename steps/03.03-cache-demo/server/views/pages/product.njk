<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SFEIR Shop</title>
    <link rel="preload" href="/fonts/PixelifySans.woff2" as="font" type="font/woff2" crossorigin/>
    <link rel="preload" href="/fonts/Montserrat-Regular.woff2" as="font" type="font/woff2" crossorigin/>
    <link rel="preload" href="/fonts/Montserrat-Bold.woff2" as="font" type="font/woff2" crossorigin/>
    <link rel="preload" href="/fonts/Montserrat-SemiBold.woff2" as="font" type="font/woff2" crossorigin />
    <script async src="/scripts/tracking.js"></script>
    <script defer src="/scripts/product.js"></script>
    <script defer src="/scripts/main.js"></script>
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="preload" href="/styles/secondary.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="/styles/relatedProducts.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="/styles/footer.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript>
      <link rel="stylesheet" href="/styles/secondary.css">
      <link rel="stylesheet" href="/styles/relatedProducts.css">
      <link rel="stylesheet" href="/styles/footer.css">
    </noscript>
  </head>
  <body>
    {% include "partials/header.njk" %}
    <main>
      <section class="container product-top">
        <div class="product-images">
          <div class="product-thumbnails">
            {% for image in product.images %}
            <button
              class="product-thumbnail {% if loop.index0 === 0 %} product-thumbnail__current {% endif %}"
              aria-controls="main-image"
              {% if loop.index0 === 0 %} aria-current="true" {% endif %}
              >
              <img
                width="100"
                height="100"
                src="{{ image.source }}?width=120"
                alt="{{ image.name }}"
              />
            </button>
            {% endfor %}
          </div>
          <div id="main-image-container" class="product-main-image__container">
            <img
              id="main-image"
              class="product-main-image"
              width="500"
              height="500"
              src="{{ product.images[0].source }}?width=120"
              size="(min-width: 600px) 50vw, 100vw"
              srcset="{{ product.images[0].source }}?quality=100&width=500, {{ product.images[0].source }}?quality=100&width=1000 2x"
              alt="{{ image.name }}"
            />
          </div>
        </div>
        <div class="product-info">
          <h1 class="product-title">{{ product.name }}</h1>
          <div class="product-preview-review">
            <span class="product-preview-review-stars">
              {% for i in range(0, product.reviews.score) %}
              <span class="product-preview-review-star">★</span>
              {% endfor %}
            </span>
            <span class="product-preview-review-count">
              ({{ product.reviews.score }} avis)
            </span>
            <a href="#reviews" class="btn btn-secondary btn-small">Voir tous les avis</a>
          </div>
          <p>{{ product.descriptionShort|safe }}</p>
          <a href="description" class="btn btn-secondary btn-small">Lire plus</a>

          <div id="conversion" class="conversion-container"></div>

          <p>Livraison offerte à partir de 50€ d'achat</p>
        </div>
      </section>

      <section class="floor container descriptionblock">
        <h2 class="descriptionblock__title title-bg">DESCRIPTION</h2>
        <div class="descriptionblock__content">
          <div class="descriptionblock__content-inner">
            {{ product.description|safe }}
          </div>
        </div>
      </section>

      {% if product.video %}
        <section class="floor videosection ">
          <h2 class="videosection__title title-bg">EN VIDEO</h2>
          <div class="video-container">
            <div class="video-cover" onclick="playVideo()">
              <img loading="lazy" src="{{product.video.cover}}?width=800" alt="Plant in a pot on a windowsill" class="cover-image">
              <span class="play-button">▶</span>
            </div>
            <!--
            <iframe id="rickroll-video" src="{{product.video.iframeUrl}}" title="YouTube video player" frameborder="0" allow="autoplay; encrypted-media"
              allowfullscreen style="display: none;">
            </iframe>
            -->
          </div>
        </section>
      {% endif %}

      <section class="floor container container-small" id="related-products">
        {% include "partials/related-products.njk" %}
      </section>

      <section class="floor container container-small">
        <h2 class="title-bg">AVIS CLIENTS</h2>
        <div id="reviews" class="reviews">
          {% include "partials/skeleton-reviews.njk" %}
        </div>
      </section>
    </main>
    {% include "partials/footer.njk" %}

    <div class="image-zoom" id="image-zoom">

      <div class="image-zoom__inner">
        <button class="image-zoom__close" id="btn-image-zoom-close">
          <span aria-hidden="true">&times;</span>
          <span class="vh">close</span>
        </button>
        <img class="image-zoom__img" src="" width="1000" height="1000" alt="" />
      </div>
    </div>
  </body>
</html>
